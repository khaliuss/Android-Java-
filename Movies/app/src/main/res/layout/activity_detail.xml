<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/detailIFavoriteImgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:src="@android:drawable/btn_star_big_off"
            app:layout_constraintTop_toBottomOf="@id/detailImg"
            app:layout_constraintBottom_toBottomOf="@id/detailImg"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/detailIMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Movie Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/detailIMovieYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2000"
            android:textSize="16sp"
            android:textColor="@android:color/holo_orange_dark"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailIMovieName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/detailIMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Some description"
            android:textSize="14sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailIMovieYear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>